{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "rojo build -o build.rbxlx"
        },
        {
            "label": "serve",
            "type": "shell",
            "command": "rojo serve"
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "rbxtsc -w"
        },
        {
            "label": "start",
            "dependsOn": [
                "build",
                "serve",
                "watch"
            ],
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}